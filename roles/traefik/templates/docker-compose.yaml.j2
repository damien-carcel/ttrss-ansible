version: '3.4'

services:
  traefik:
    image: 'traefik:montdor-alpine'
    restart: 'always'
    networks:
      - {{ proxy_network }}
    ports:
      - '80:80'
    restart: always
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
      - './traefik.yaml:/etc/traefik/traefik.yaml:ro'

networks:
  {{ proxy_network }}:
    external: true
